<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/rootDash"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@android:color/transparent">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
      android:orientation="vertical"
      android:padding="20dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <!-- header -->
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
          android:id="@+id/tvTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Dashboard"
          android:textColor="@color/m3_colorOnBackground"
          android:textStyle="bold"
          android:textSize="24sp" />

        <ImageButton
          android:id="@+id/btnNotif"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_alignParentEnd="true"
          android:background="@android:color/transparent"
          android:contentDescription="Notifications"
          android:src="@drawable/ic_notifications_black_24dp"
          app:tint="@color/m3_colorOnBackground" />

        <TextView
          android:id="@+id/tvNotifBadge"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_alignEnd="@id/btnNotif"
          android:layout_alignTop="@id/btnNotif"
          android:layout_marginEnd="2dp"
          android:layout_marginTop="2dp"
          android:gravity="center"
          android:backgroundTintMode="src_in"
          android:backgroundTint="#D62C2C"
          android:background="@drawable/ic_badge_unread"
          android:textColor="#ffffff"
          android:textSize="11sp"
          android:visibility="gone"
          android:text="0" />
      </RelativeLayout>

      <!-- mini map card -->
      <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMap"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/brand_surface"
        app:strokeWidth="0dp"
        android:clickable="true"
        android:focusable="true">

        <com.google.android.gms.maps.MapView
          android:id="@+id/mapPreview"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
      </com.google.android.material.card.MaterialCardView>

      <!-- top tabs -->
      <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btnTabBookings"
          style="@style/Widget.Material3.Button"
          android:layout_width="0dp"
          android:layout_height="48dp"
          android:layout_weight="1"
          android:text="Bookings"
          android:textAllCaps="false"
          app:cornerRadius="24dp"
          app:backgroundTint="@color/m3_colorPrimary"
          android:textColor="@color/brand_on_primary"
          android:stateListAnimator="@null" />

        <View
          android:layout_width="12dp"
          android:layout_height="1dp" />

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btnTabStations"
          style="@style/Widget.Material3.Button.OutlinedButton"
          android:layout_width="0dp"
          android:layout_height="48dp"
          android:layout_weight="1"
          android:text="Stations"
          android:textAllCaps="false"
          app:cornerRadius="24dp"
          app:strokeColor="@color/m3_colorOutline"
          app:strokeWidth="1dp"
          app:backgroundTint="@color/brand_surface"
          android:textColor="@color/m3_colorOnSurface"
          android:stateListAnimator="@null" />
      </LinearLayout>

      <!-- bookings panel -->
      <LinearLayout
        android:id="@+id/panelBookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btnCreateBookingQuick"
          style="@style/Widget.Material3.Button.OutlinedButton"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:text="Create Booking"
          android:textAllCaps="false"
          app:cornerRadius="24dp"
          app:strokeColor="@color/m3_colorOutline"
          app:strokeWidth="1dp"
          app:backgroundTint="@color/brand_surface"
          android:textColor="@color/m3_colorOnSurface" />

        <ProgressBar
          android:id="@+id/progressBookings"
          style="?android:attr/progressBarStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="12dp"
          android:visibility="gone" />

        <TextView
          android:id="@+id/tvBookingsEmpty"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:text="No bookings for today"
          android:textColor="#9c9c9c"
          android:gravity="center"
          android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rvBookings"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp" />
      </LinearLayout>

      <!-- stations panel -->
      <LinearLayout
        android:id="@+id/panelStations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:visibility="gone">

        <ProgressBar
          android:id="@+id/progressStations"
          style="?android:attr/progressBarStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="12dp"
          android:visibility="gone" />

        <TextView
          android:id="@+id/tvStationsEmpty"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:text="No active stations"
          android:textColor="#9c9c9c"
          android:gravity="center"
          android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rvStations"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp" />
      </LinearLayout>
    </LinearLayout>
  </ScrollView>
</FrameLayout>
