<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/rootSignup"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/brand_background"
  android:padding="20dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Header Card -->
    <com.google.android.material.card.MaterialCardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardCornerRadius="20dp"
      app:cardElevation="2dp"
      app:cardBackgroundColor="@color/brand_surface">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
          android:text="Create Owner Account"
          android:textColor="@color/m3_colorOnSurface"
          android:textSize="22sp"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        <TextView
          android:text="Fill in your accurate details to create an owner profile."
          android:textColor="#BDBDBD"
          android:textSize="12sp"
          android:layout_marginTop="2dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- NIC -->
    <com.google.android.material.textfield.TextInputLayout
      style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
      android:hint="NIC"
      android:layout_marginTop="20dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etNic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="@color/m3_colorOnSurface" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Full Name -->
    <com.google.android.material.textfield.TextInputLayout
      style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
      android:hint="Full Name"
      android:layout_marginTop="12dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/m3_colorOnSurface" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Email -->
    <com.google.android.material.textfield.TextInputLayout
      style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
      android:hint="Email"
      android:layout_marginTop="12dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="@color/m3_colorOnSurface" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Phone -->
    <com.google.android.material.textfield.TextInputLayout
      style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
      android:hint="Phone"
      android:layout_marginTop="12dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:textColor="@color/m3_colorOnSurface" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password -->
    <com.google.android.material.textfield.TextInputLayout
      style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
      android:hint="Password"
      android:layout_marginTop="12dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:endIconMode="password_toggle">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="@color/m3_colorOnSurface" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Address Line 1 -->
    <com.google.android.material.textfield.TextInputLayout
      style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
      android:hint="Address Line 1"
      android:layout_marginTop="12dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etAddr1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/m3_colorOnSurface" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Address Line 2 -->
    <com.google.android.material.textfield.TextInputLayout
      style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
      android:hint="Address Line 2"
      android:layout_marginTop="12dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etAddr2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/m3_colorOnSurface" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- City -->
    <com.google.android.material.textfield.TextInputLayout
      style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
      android:hint="City"
      android:layout_marginTop="12dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/m3_colorOnSurface" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- CTA -->
    <Button
      android:id="@+id/btnSignup"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Create Account"
      android:textAllCaps="false"
      android:layout_marginTop="20dp"
      android:backgroundTint="@color/brand_primary"
      android:textColor="@color/brand_on_primary" />
  </LinearLayout>
</ScrollView>
