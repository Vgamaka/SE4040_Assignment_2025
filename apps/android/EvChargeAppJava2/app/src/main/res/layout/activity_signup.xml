<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f0f0f">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Owner Account"
            android:textColor="#f8f8f8"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fill all fields exactly as required by the server."
            android:textColor="#dcdcdc"
            android:textSize="14sp"
            android:paddingBottom="16dp" />

        <!-- NIC -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="NIC" android:textColor="#dcdcdc" />
        <EditText
            android:id="@+id/etNic"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#202020"
            android:textColor="#f8f8f8"
            android:textColorHint="#9c9c9c"
            android:hint="200012345678"
            android:padding="12dp"
            android:singleLine="true" />

        <!-- Full name -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Full Name" android:textColor="#dcdcdc" android:paddingTop="12dp" />
        <EditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#202020"
            android:textColor="#f8f8f8"
            android:textColorHint="#9c9c9c"
            android:hint="Nadeesha Fernando"
            android:padding="12dp"
            android:singleLine="true" />

        <!-- Email -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Email" android:textColor="#dcdcdc" android:paddingTop="12dp" />
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#202020"
            android:textColor="#f8f8f8"
            android:textColorHint="#9c9c9c"
            android:hint="nadeesha.owner@example.com"
            android:padding="12dp"
            android:singleLine="true"
            android:inputType="textEmailAddress" />

        <!-- Phone -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Phone" android:textColor="#dcdcdc" android:paddingTop="12dp" />
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#202020"
            android:textColor="#f8f8f8"
            android:textColorHint="#9c9c9c"
            android:hint="+94771230000"
            android:padding="12dp"
            android:singleLine="true"
            android:inputType="phone" />

        <!-- Password -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Password" android:textColor="#dcdcdc" android:paddingTop="12dp" />
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#202020"
            android:textColor="#f8f8f8"
            android:textColorHint="#9c9c9c"
            android:hint="Owner@123"
            android:padding="12dp"
            android:singleLine="true"
            android:inputType="textPassword" />

        <!-- Address Line 1 -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Address Line 1" android:textColor="#dcdcdc" android:paddingTop="12dp" />
        <EditText
            android:id="@+id/etAddr1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#202020"
            android:textColor="#f8f8f8"
            android:textColorHint="#9c9c9c"
            android:hint="12 Flower Road"
            android:padding="12dp"
            android:singleLine="true" />

        <!-- Address Line 2 -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Address Line 2" android:textColor="#dcdcdc" android:paddingTop="12dp" />
        <EditText
            android:id="@+id/etAddr2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#202020"
            android:textColor="#f8f8f8"
            android:textColorHint="#9c9c9c"
            android:hint="Colombo 7"
            android:padding="12dp"
            android:singleLine="true" />

        <!-- City -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="City" android:textColor="#dcdcdc" android:paddingTop="12dp" />
        <EditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#202020"
            android:textColor="#f8f8f8"
            android:textColorHint="#9c9c9c"
            android:hint="Colombo"
            android:padding="12dp"
            android:singleLine="true" />

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:backgroundTint="#5DD62C"
            android:textColor="#000000"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>
