<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/rootCreateBooking"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fillViewport="true"
  android:background="#0F0F0F">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Title -->
    <TextView
      android:id="@+id/tvCreateTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Create Booking"
      android:textColor="#F8F8F8"
      android:textSize="24sp"
      android:textStyle="bold"
      android:paddingBottom="6dp" />

    <!-- Tip / rules banner -->
    <com.google.android.material.card.MaterialCardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardCornerRadius="16dp"
      app:cardBackgroundColor="#202020"
      app:cardElevation="2dp"
      android:layout_marginBottom="12dp">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:text="Bookings allowed up to 7 days ahead. Modify/cancel â‰¥12h before start."
        android:textColor="#BDBDBD"
        android:textSize="13sp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Form card -->
    <com.google.android.material.card.MaterialCardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardCornerRadius="20dp"
      app:cardBackgroundColor="#80FFFFFF"
      app:cardElevation="3dp">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Station -->
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Station"
          android:textColor="#F8F8F8"
          android:textSize="16sp"
          android:paddingTop="4dp"/>

        <Spinner
          android:id="@+id/spStation"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="6dp"
          android:popupBackground="#F8F8F8"
          android:backgroundTint="#5DD62C"
          android:dropDownSelector="#5DD62C"
          android:textColor="#F8F8F8" />

        <!-- Date -->
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Date"
          android:textColor="#F8F8F8"
          android:textSize="16sp"
          android:paddingTop="16dp"/>

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btnPickDate"
          style="@style/Widget.Material3.Button.OutlinedButton"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:text="Pick Date"
          android:textAllCaps="false"
          app:cornerRadius="24dp"
          app:strokeColor="#2A2A2A"
          app:strokeWidth="1dp"
          app:backgroundTint="#2A2A2A"
          android:textColor="#5DD62C"
          android:layout_marginTop="6dp" />

        <!-- Time -->
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Time"
          android:textColor="#F8F8F8"
          android:textSize="16sp"
          android:paddingTop="16dp"/>

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btnPickTime"
          style="@style/Widget.Material3.Button.OutlinedButton"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:text="Pick Time"
          android:textAllCaps="false"
          app:cornerRadius="24dp"
          app:strokeColor="#2A2A2A"
          app:strokeWidth="1dp"
          app:backgroundTint="#2A2A2A"
          android:textColor="#5DD62C"
          android:layout_marginTop="6dp" />

        <!-- Duration -->
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Duration (minutes)"
          android:textColor="#F8F8F8"
          android:textSize="16sp"
          android:paddingTop="16dp"/>

        <Spinner
          android:id="@+id/spMinutes"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="6dp"
          android:popupBackground="#F8F8F8"
          android:backgroundTint="#5DD62C"
          android:textColor="#F8F8F8" />

        <!-- Notes -->
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Notes"
          android:textColor="#F8F8F8"
          android:textSize="16sp"
          android:paddingTop="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
          app:boxBackgroundMode="outline"
          app:boxCornerRadiusTopStart="20dp"
          app:boxCornerRadiusTopEnd="20dp"
          app:boxCornerRadiusBottomStart="20dp"
          app:boxCornerRadiusBottomEnd="20dp"
          app:boxBackgroundColor="#202020"
          app:boxStrokeColor="#5DD62C"
          app:boxStrokeWidth="1dp"
          app:boxStrokeWidthFocused="2dp"
          app:hintEnabled="false"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="6dp">

          <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:hint="Optional vehicle note, e.g. Nissan Leaf"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:includeFontPadding="false"
            android:textColor="#F8F8F8"
            android:textColorHint="#9C9C9C" />
        </com.google.android.material.textfield.TextInputLayout>

      </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Primary CTA -->
    <com.google.android.material.button.MaterialButton
      android:id="@+id/btnReview"
      style="@style/Widget.Material3.Button"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_marginTop="16dp"
      android:text="Review"
      android:textAllCaps="false"
      app:cornerRadius="28dp"
      app:backgroundTint="#5DD62C"
      android:textColor="#0F0F0F"
      android:stateListAnimator="@null"
      android:translationZ="0dp" />
  </LinearLayout>
</ScrollView>
