<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="#0f0f0f"
  android:orientation="vertical"
  android:padding="16dp"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <!-- Title -->
  <TextView
    android:id="@+id/tvBookingsTitle"
    android:text="Bookings"
    android:textColor="#f8f8f8"
    android:textSize="22sp"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <!-- Create Booking -->
  <Button
    android:id="@+id/btnCreateBooking"
    android:text="Create Booking"
    android:backgroundTint="#5DD62C"
    android:textColor="#000000"
    android:layout_marginTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

  <!-- Filters -->
  <LinearLayout
    android:id="@+id/filtersRow"
    android:orientation="vertical"
    android:layout_marginTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Status -->
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
        android:text="Status"
        android:textColor="#dcdcdc"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

      <Spinner
        android:id="@+id/spStatus"
        android:layout_marginStart="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    </LinearLayout>

    <!-- Date range -->
    <LinearLayout
      android:orientation="horizontal"
      android:layout_marginTop="8dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <Button
        android:id="@+id/btnFrom"
        android:text="From"
        android:textAllCaps="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

      <View
        android:layout_width="8dp"
        android:layout_height="1dp"/>

      <Button
        android:id="@+id/btnTo"
        android:text="To"
        android:textAllCaps="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

      <View
        android:layout_width="8dp"
        android:layout_height="1dp"/>

      <Button
        android:id="@+id/btnRefresh"
        android:text="Refresh"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
  </LinearLayout>

  <!-- List with pull-to-refresh -->
  <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swrBookings"
    android:layout_marginTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rvBookings"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>
  </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>
