<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/root"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#101010">

  <LinearLayout
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Station selector row: search + logout -->
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <AutoCompleteTextView
        android:id="@+id/stationSearch"
        android:hint="Select station"
        android:textColor="#FFFFFF"
        android:textColorHint="#9C9C9C"
        android:dropDownHeight="200dp"
        android:background="#202020"
        android:padding="12dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

      <Button
        android:id="@+id/btnLogoutOp"
        android:text="Logout"
        android:textAllCaps="false"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#303030"
        android:textColor="#FFFFFF"/>
    </LinearLayout>

    <!-- Small embedded map -->
    <LinearLayout
      android:orientation="horizontal"
      android:layout_marginTop="8dp"
      android:layout_width="match_parent"
      android:layout_height="140dp">

      <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

    </LinearLayout>

    <!-- Filters -->
    <HorizontalScrollView
      android:layout_marginTop="8dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
        android:id="@+id/filterRow"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </HorizontalScrollView>

    <!-- List + pull-to-refresh -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
      android:id="@+id/swipe"
      android:layout_marginTop="6dp"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1">
      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ProgressBar
      android:id="@+id/progress"
      style="?android:attr/progressBarStyleLarge"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="8dp"
      android:visibility="gone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  </LinearLayout>

  <!-- Floating Scan button -->
  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/fabScan"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_margin="16dp"
    android:contentDescription="Scan QR"
    android:src="@android:drawable/ic_menu_camera"
    android:tint="#101010"
    android:backgroundTint="#5DD62C"/>

  <!-- Scan overlay -->
  <LinearLayout
    android:id="@+id/scanOverlay"
    android:visibility="gone"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#B3000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
      android:text="Scan QR"
      android:textSize="18sp"
      android:textColor="#FFFFFF"
      android:layout_marginBottom="8dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <androidx.camera.view.PreviewView
      android:id="@+id/previewView"
      android:layout_width="300dp"
      android:layout_height="300dp"
      android:background="#202020"/>

    <Button
      android:id="@+id/btnScanClose"
      android:text="Close"
      android:layout_marginTop="12dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  </LinearLayout>

</FrameLayout>
