<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/rootProfile"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/brand_background"
  android:padding="20dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Header Card -->
    <com.google.android.material.card.MaterialCardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardCornerRadius="20dp"
      app:cardElevation="2dp"
      app:cardBackgroundColor="@color/brand_surface">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <TextView
            android:text="Owner Profile"
            android:textColor="@color/m3_colorOnSurface"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

          <TextView
            android:text="Manage your personal and contact information"
            android:textColor="#BDBDBD"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
          android:id="@+id/btnLogout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Logout"
          android:textAllCaps="false"
          android:textColor="@color/m3_colorOnSurface"
          android:backgroundTint="@color/brand_primary" />
      </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- NIC -->
    <com.google.android.material.textfield.TextInputLayout
      style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:hint="NIC">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etNic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="@color/m3_colorOnSurface" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
      android:id="@+id/btnLoad"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Load Profile"
      android:layout_marginTop="12dp"
      android:textAllCaps="false"
      android:backgroundTint="@color/brand_primary"
      android:textColor="@color/brand_on_primary" />

    <!-- Editable fields -->
    <com.google.android.material.textfield.TextInputLayout
      style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
      android:hint="Full Name"
      android:layout_marginTop="20dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/m3_colorOnSurface" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
      style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
      android:hint="Email"
      android:layout_marginTop="12dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etEmail"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/m3_colorOnSurface" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
      style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
      android:hint="Phone"
      android:layout_marginTop="12dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etPhone"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/m3_colorOnSurface" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
      style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
      android:hint="Address Line 1"
      android:layout_marginTop="12dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etLine1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/m3_colorOnSurface" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
      style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
      android:hint="Address Line 2"
      android:layout_marginTop="12dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/m3_colorOnSurface" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
      style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
      android:hint="City"
      android:layout_marginTop="12dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/m3_colorOnSurface" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Actions -->
    <Button
      android:id="@+id/btnSave"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Save Changes"
      android:textAllCaps="false"
      android:backgroundTint="@color/brand_primary"
      android:textColor="@color/brand_on_primary"
      android:layout_marginTop="20dp" />

    <Button
      android:id="@+id/btnDeactivate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Deactivate Account"
      android:textAllCaps="false"
      android:layout_marginTop="8dp"
      android:backgroundTint="@color/brand_surface"
      android:textColor="@color/m3_colorOnSurface" />
  </LinearLayout>
</ScrollView>
